@model IEnumerable<CrudMVCporIvanMauricio.Models.Cliente>

@{
	ViewBag.Title = "Index";
}

<h2>Cadastro de Clientes</h2>
@using (Html.BeginForm("Index", "Clientes", FormMethod.Get, new {@class = "form-inline"}))
 {
	<input type = "text" placeholder = "Buscar um cliente" name = "busca" class="form-control" />
    <input type = "submit" class="btn btn-default" value="Buscar" />
 }
</br>
<p>
	@Html.ActionLink("Adicionar novo", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Nome)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Endereco)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Telefone)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DataNascimento)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Ativo)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Nome)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Endereco)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Telefone)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Email)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.DataNascimento)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Ativo)
		</td>
		<td>
			@Html.ActionLink("Editar", "Edit", new { id=item.Id}) |
			@Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
			@Html.ActionLink("Excluir", "Delete", new { id=item.Id })
		</td>
	</tr>
}

</table>
